{# templates/login/index.html.twig #} 
{% extends 'base.html.twig' %}  {% block body %} 
    {% if error %} 
        <div>
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %} 
    <div style="width: 35em; height: 40em;margin: auto; padding-top: 5em;">
        <form action="{{ path('login') }}" method="post">
            <legend>Connexion</legend>

            <div class="form-group">
                <label class="form-label mt-4" for="username">Identifiant</label> 
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}"/>
                <small id="emailHelp" class="form-text text-muted"></small>
            </div>

            <div class="form-group">
                <label class="form-label mt-4" for="password">Mot de Passe</label> 
                <input class="form-control" placeholder="Password" type="password" id="password" name="_password"/>
                {# If you want to control the URL the user is redirected to on success <input type="hidden" name="_target_path" value="/account"/> #} 
            </div>
            <div style="padding-top: 2em;">
                <button type="submit" class="btn btn-primary">Connexion</button> 
            </div>
        </form> 
    </div>
{% endblock %}